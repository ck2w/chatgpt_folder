{
  "manifest_version": 3,
  "name": "Hello ChatGPT",
  "version": "1.0.0",
  "description": "Shows a Hello World popup and turns ChatGPT black.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content/content.js"]
    }
  ]
}
